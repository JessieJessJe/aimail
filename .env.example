# Environment variables template
# Copy this file to .env.local and fill in your actual values

# Database Configuration
# For development, you can use SQLite (default in schema.prisma)
# DATABASE_URL="file:./dev.db"
# For production, use your actual database URL
DATABASE_URL="your_database_url_here"

# Zypher Agent Configuration
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY="your_anthropic_api_key_here"

# Email Configuration (for newsletter sending)
EMAIL_USER="your_email@example.com"
EMAIL_PASS="your_email_password_or_app_password"
EMAIL_FROM="your_sender_email@example.com"

# Next.js Configuration
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Add any other environment variables your application needs below